@page "{id:int}"
@model RazorPages.Pages.Students.EditModel;

<div class="card-body">
    <form method="post" >
        <input type="hidden" asp-for="Student.Id" />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Student</h2>
                <hr />
            </div>

            <div class="mb-3">
                Name:
                <input type="text" asp-for="Student.Name">
            </div>
            <div class="mb-3">
                Address:
                <input type="text" asp-for="Student.Address">
            </div>
              </div>
            <input class="btn btn-sm btn-Dark" value="Save" type="submit"/>
    </form>
    <div>
    <a asp-page="./Index" class="btn btn-sm btn-Gray">Back to List</a>
</div>
</div>
</div>