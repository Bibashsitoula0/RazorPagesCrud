@page
@model RazorPages.Pages.Students.IndexModel




<a asp-page="Create" class="btn btn-primary btn-sm ">Create New</a>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <td>S.N</td>
            <td>Name</td>
            <td>Address</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @{
            var sn = 1;
            foreach (var student in Model.Students) 
            {
                <tr>
                    <td>@(sn++)</td>
                    <td>@student.Name</td>
                    <td>@student.Address</td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@student.Id" class="btn btn-sm btn-dark">Edit</a> |

                         <a asp-page="./Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>

                    </td>

                </tr>
            }
        }

    </tbody>
</table>
